<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.LogInController">

	<center>
		<VBox styleClass="myVBoxStyleCenter">
			<HBox style="-fx-alignment: center">
				<Label styleClass="logTitle" text="Neptun System" />
			</HBox>

			<HBox styleClass="myHBoxStyle">
				<Label text="Username:" style="-fx-font-size: 14px" />
				<TextField fx:id="user" prefHeight="30" prefWidth="170" />
			</HBox>

			<HBox styleClass="myHBoxStyle">
				<Label text="Password: " style="-fx-font-size: 14px" />
				<PasswordField  fx:id="password" prefHeight="30" prefWidth="170" />
			</HBox>
			<HBox styleClass="myHBoxStyle">

				<Button fx:id="loginButton" text="Login" />
				<Label fx:id = "cannotLogin"  styleClass="cannotLogin"/> 

			</HBox>

		</VBox>

	</center>
	<bottom>

	</bottom>
	
</BorderPane>
