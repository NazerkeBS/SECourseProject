<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MenuStudentController">
	<MenuBar fx:id="menuBar">
		<menus>
			<Menu text="Course">
				<items>
					<MenuItem text="Take course" onAction="#takeCourse" />
					<MenuItem text="Drop course" onAction="#dropCourse" />
					<MenuItem text="List all subjects" onAction="#listAllSubjects" />
					<MenuItem text="Registered courses" onAction="#registeredCourses" />

				</items>
			</Menu>
			
			<Menu text="Grade">
				<items>
					<MenuItem text="List grades" onAction="#listGrades" />
				</items>
			</Menu>

		</menus>
	</MenuBar>
	<Pane fx:id="content">
		<Label text="Welcome to Neptun System" styleClass="welcome" />
	</Pane>
	<Button  fx:id="logoutButton" styleClass="logout" text="logout" onAction="#logout"/>
	 
</VBox>
